<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:id="@+id/logo"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/newlogo" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/text_size_textview"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/grc_text"
            android:layout_gravity="center"
            android:text="GOVERNANCE   RISK  COMPLIANCE "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_weight="0.25"
            android:id="@+id/btn_layout"
            android:weightSum="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_weight="0.5"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_leftandright"
                android:background="@color/red"
                android:id="@+id/btn_signin"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:text="@string/sign_in" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_marginLeft="@dimen/margin_leftandright"
                android:layout_marginBottom="@dimen/margin_top"
                android:layout_weight="0.5"
                android:background="@color/red"
                android:layout_gravity="bottom"
                android:id="@+id/btn_signup"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:text="@string/sign_up"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>