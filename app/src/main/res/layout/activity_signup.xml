<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_signup_padding"
        android:paddingBottom="@dimen/activity_signup_padding"
        android:layout_weight="1"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_weight="1"
                android:textColorHint="#c4c4c4"
                android:inputType="textPersonName"
                />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/userpsw_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_psw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_weight="1"
                android:textColorHint="#c4c4c4"
                android:inputType="textPassword"
                />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/usermail_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_weight="1"
                android:textColorHint="#c4c4c4"
                android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/cmpyname_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_company"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_weight="1"
                android:textColorHint="#c4c4c4"
                android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/domainname_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_domain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:layout_weight="1"
                android:textColorHint="#c4c4c4"
                android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup">
            <Spinner
                android:id="@+id/simpleSpinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height"
                android:layout_gravity="left"
                android:layout_weight="0.25"
                android:background="@drawable/spinner_item_border"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/simpleSpinner"
                android:layout_toEndOf="@+id/simpleSpinner">

            <EditText
                android:id="@+id/input_phon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_splash"
                android:inputType="number"
                android:layout_weight="0.75"
                />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.35"
            android:layout_marginLeft="@dimen/edit_margin_left_signup"
            android:layout_marginRight="@dimen/edit_margin_left_signup"
            android:layout_marginTop="@dimen/text_size_textview"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/red"
                android:id="@+id/btn_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:text="@string/sign_up"
                android:layout_weight="0.98" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>